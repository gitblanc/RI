package uo.ri.cws.application.ui.manager.action;

import console.Console;
import menu.Action;
import uo.ri.cws.application.business.BusinessException;
import uo.ri.cws.application.business.mechanic.MechanicService.MechanicBLDto;
import uo.ri.cws.application.business.mechanic.crud.DeleteMechanic;

public class DeleteMechanicAction implements Action {
	
	@Override
	public void execute() throws BusinessException {
		MechanicBLDto mechanic = new MechanicBLDto();
		mechanic.id = Console.readString("Type mechanic id "); 
		DeleteMechanic am = new DeleteMechanic(mechanic);
		am.execute();
		Console.println("Mechanic deleted");
	}

}
