	@Override
	public Optional<WorkOrderDALDto> findById(String id) {
		Optional<WorkOrderDALDto> workOrder = null;
		Connection c = null;
		PreparedStatement pst = null;
		ResultSet rs = null;

		try {
			c = Jdbc.getCurrentConnection();

			pst = c.prepareStatement(TWORKORDERS_findById);
			pst.setString(1, id);
			rs = pst.executeQuery();

			mechanic = MechanicAssembler.toMechanicDALDto(rs);// Fijarse en que sea el Assembler de persistence y no de
																// business

		} catch (SQLException e) {
			throw new PersistenceException("Database error");
		} finally {
			if (rs != null)
				try {
					rs.close();
				} catch (SQLException e) {
					/* ignore */ }
			if (pst != null)
				try {
					pst.close();
				} catch (SQLException e) {
					/* ignore */ }

		}
		return mechanic;
	}

